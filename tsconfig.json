{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2016",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "types/*"
            ]
        },
        "lib": [
            "dom",
            "es5",
            "scripthost",
            "es2015.symbol.wellknown",
            "es2015.promise"
        ], 
        "rootDirs": ["src"],
        "removeComments": true,
        "preserveConstEnums": true
    }
}