{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "types/*"
            ]
        },
        "lib": [
            "dom",
            "es5",
            "scripthost",
            "es2015.symbol.wellknown",
            "es2015.promise"
        ], 
        "removeComments": true,
        "preserveConstEnums": true
    },
    "files": [
        "lib.ts"
    ]
}